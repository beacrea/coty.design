modules = ["nodejs-20"]

[workflows]

[[workflows.workflow]]
name = "Ask Chatbot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ask && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
